@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="divport" content="width=device-width,
                                     initial-scale=1.0,
                                     maximum-scale=1.0">

    <title>Untitled Document</title>
    <link href="~/Content/FixedGroupChooseTopicUI.css" rel="stylesheet" type="text/css">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    <style>
        html, body {
            background-color: aqua;
            margin: 0px;
            height: 100%;
        }
    </style>
</head>
<body>
    <!--设置左上角的usersIcon-->
    <div class="blueUsersDiv">
        <img src="~/Content/FixedGroupChooseTopicUI/users.png" class="blueUsersIcon" />
        <span class="FONT1">请为您的队伍选题</span>
    </div>

    <!--细线，hr不好设置css，用一个高度很小的div来代替-->
    <div class="hrDiv">
    </div>

    <!--当选题未选完时框是蓝色的，要增加新框就直接复制-->
    <div class="blueTopicDiv">
        <span class="topic">话题A</span>
        <div class="hrVertical"> </div>
        <span class="topicName">领域模型设计</span>
        <!--剩余选题数量大于等于2时-->
        <span class="leftNumWhite">剩余 ： 2/5</span>
        <img src="~/Content/FixedGroupChooseTopicUI/九点.png" class="nineIcon" />
    </div>

    <div class="blueTopicDiv">
        <span class="topic">话题B</span>
        <div class="hrVertical"> </div>
        <span class="topicName">包划分</span>
        <!--剩余选题为1时会变红-->
        <span class="leftNumRed">剩余 ： 1/5</span>
        <img src="~/Content/FixedGroupChooseTopicUI/九点.png" class="nineIcon">
    </div>

    <!--无剩余名额时选题框为灰色-->
    <div class="greyTopicDiv">
        <span class="topic">话题C</span>
        <div class="hrVertical"> </div>
        <span class="topicName">界面设计</span>
        <span class="leftNumWhite">剩余 ： 0/5</span>
        <img src="~/Content/FixedGroupChooseTopicUI/九点.png" class="nineIcon" />
    </div>
</body>
</html>
